{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"],
    "sourceMap": true,
    "outDir": "./dist/",
    "allowJs": false,
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"]
}
